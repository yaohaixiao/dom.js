    pre.section__pre
      code.section__code.
        // 引入 DOM 模块（中的所有工具方法）
        import DOM from '@yaohaixiao/dom.js/dom'
        // 或者单独引用 isTextNode() 方法
        import isTextNode from '@yaohaixiao/dom.js/isTextNode'

        const $list = document.getElementById('list')
        const $div = document.createElement('div')
        const $fragment = document.createDocumentFragment()
        const $items = document.querySelectorAll('.item')
        const $text = document.createTextNode('text')

        DOM.isElement($list) // -> true
        DOM.isTextNode($list) // -> false

        DOM.isElement($div) // -> true
        DOM.isTextNode($div) // -> false

        DOM.isFragment($fragment) // -> true
        DOM.isTextNode($fragment) // -> false

        DOM.isHTMLCollection($items) // -> true
        DOM($items) // -> false

        DOM.isElement($text) // -> false
        isTextNode($text) // -> true
