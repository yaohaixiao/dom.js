        import DOM from '@yaohaixiao/dom.js/dom
        // 引用 injectCSS 单个方法
        import injectCSS from '@yaohaixiao/dom.js/injectCSS'

        const rules = 'body {background-color: #f00;}'

        DOM.injectCSS(rules)
        // -> &lt;style type="text/css"&gt;body{background-color:#f00;}&lt;/style&gt;

