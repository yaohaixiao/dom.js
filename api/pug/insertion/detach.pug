    pre.section__pre
      code.section__.
        &lt;ul id="list" class="list"&gt;
            &lt;li class="item about"&gt;About&lt;/li&gt;
        &lt;/ul&gt;

        // 引入 DOM 模块（中的所有工具方法）
        import DOM from '@yaohaixiao/dom.js/dom
        // 引用 detach 单个方法
        import detach from '@yaohaixiao/dom.js/detach'

        const $list = DOM.byId('#list')

        // 移除指定选择器 .item 的 DOM 元素
        DOM.detach('.item')

        // 指定 el 参数 $list，针对页面 DOM 元素数量大的情况，可提高性能
        detach('.item', $list)
