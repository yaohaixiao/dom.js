      code.section__code.
        const outline = new Outline(Outline.DEFAULTS)

        const handler = (msg) => {
          console.log(msg)
        }

        outline.$on('created', handler)
        outline.$on('mounted', handler)

        // 异步发布
        outline.$emit('mounted') // -> 'ok'

        // 同步发布
        // 延迟10毫秒：应该看输出 ok 后输出
        outline.$emit('created')
