    pre.section__pre
      code.section__code.
        &lt;style&gt;
        .list {
          position: relative;
          z-index: 1;
        }
        .list,
        .item {
          margin: 0;
          padding: 0;
          list-style-type: none;
          overflow: hidden;
        }
        .item {
          margin: 0;
          border: 2px;
          padding: 10px;
          height: 40px;
          overflow: hidden;
        }
        &lt;/style&gt;

        &lt;ul id="list" class="list"&gt;
            &lt;li id="home" class="item active"&gt;Home&lt;/li&gt;
            &lt;li class="item blog"&gt;Blog&lt;/li&gt;
            &lt;li class="item project"&gt;Projects&lt;/li&gt;
            &lt;li class="item"&gt;About&lt;/li&gt;
        &lt;/ul&gt;

        // 引入 DOM 模块（中的所有工具方法）
        import DOM from '@yaohaixiao/dom.js/dom
        // 引用 positions 单个方法
        import positions from '@yaohaixiao/dom.js/positions'

        const $list = DOM.byId('#list')
        const $home = DOM.byId('#home')

        DOM.positions($list)
        // -> {
          top: 0,
          left: 0,
          x: 0,
          y: 0
        }

        positions($home)
        // -> {
          top: 0,
          left: 0,
          x: 0,
          y: 64
        }
